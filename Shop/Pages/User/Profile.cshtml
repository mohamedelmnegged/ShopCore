@model Shop.Data.Tables.User
@{ 
    ViewData["Title"] = "User Profile";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Profile</h4>
                        <p class="category">User Profile</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-striped">
                            <tbody>

                                <tr>
                                    <th>ID</th>
                                    <td>
                                        @Model.Id
                                    </td>
                                </tr>

                                <tr>
                                    <th>Name</th>
                                    <td>
                                        @Model.UserName
                                    </td>
                                </tr>

                                <tr>
                                    <th>Email</th>
                                    <td>
                                        @Model.Email
                                    </td>
                                </tr>

                                <tr>
                                    <th>Phone</th>
                                    <td>
                                        @Model.PhoneNumber
                                    </td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>
                                        @Model.Address
                                    </td>
                                </tr>

                                <tr>
                                    <th> Action </th>
                                    <td>
                                        <a asp-area="user" asp-controller="home" asp-action="edit" class="btn btn-sm btn-info ti-pencil-alt">
                                             Edit 
                                        </a>
                                    </td>
                                </tr>
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>